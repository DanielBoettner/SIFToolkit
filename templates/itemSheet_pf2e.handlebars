        <div class="tab specialeffects item-details" data-tab="specialeffects" style="overflow:scroll">
            {{#if isArea}}
            
                <ol class="form-list">
                    <div class="form-group">
                        <label style="max-width: none;">
                            Ignore Spell Duration (Remove Immediately)				
                        </label>
                        <input class="toggle-trait" type="checkbox" name="siftoolkit.template.removal" {{#if ignoreDuration}}checked{{/if}} {{#unless isEditable}}disabled{{/unless}}>
                    </div>
                </ol>

                
                <ol class="form-list">
                    <div class="form-group">
                        <label style="max-width: none;">
                        Use Texture				
                        </label>
                        <input type="checkbox" style="float:right;" name="siftoolkit.template.useTexture" {{#if useTexture}}checked{{/if}} {{#unless isEditable}}disabled{{/unless}}>
                    </div>


                    <div class="form-group">
                        <label class="textureSelect" style="float:left;max-width:none;">Texture 
                            <table style="float:right;width:70%;padding:0px;border:none;margin:0;"><tbody><tr></tr>
                                <td style="width: 80%;padding:0px;"><input type="text" size="10" name="siftoolkit.template.texture.text" {{#unless isEditable}}disabled="disabled"{{/unless}} value={{texture}}   ></td>
                                <td style="width: 20%;padding:0px;"><input type="button" name="siftoolkit.template.texture.bttn" value="Select" style="text-align: center;" {{#unless isEditable}}disabled="disabled"{{/unless}}></td>
                            </tr></tbody></table>
                        </label>
                    </div>
                    <div class="form-group">
                        <label style="max-width: none;">
                        Alpha (Opacity)%				
                        </label>
                        <input type="number" style="float:right;" name="siftoolkit.template.alpha" min="10" max="100" value="{{alpha}}" {{#unless isEditable}}disabled="disabled"{{/unless}} >
                    </div>
                    <div class="form-group">
                        <label style="max-width: none;">
                        Loop animations				
                        </label>
                        <input type="checkbox" style="float:right;" name="siftoolkit.template.loop.animations" {{#if loopAnimations}}checked{{/if}} {{#unless isEditable}}disabled="disabled"{{/unless}}>
                    </div>
                    {{#if isCone}}
                    <div class="form-group">
                        <label style="max-width: none;">
                        Cone texture Origin				
                        </label><select name="siftoolkit.template.cone.origin" style="font-size: 12px;height: 24px;" {{#unless isEditable}}disabled="disabled"{{/unless}}>
                            <option value="Center" {{#if (eq coneOrigin 0)}}selected{{/if}}>Center</option>
                            <option value="Left" {{#if (eq coneOrigin 1)}}selected{{/if}}>Left</option>
                            <option value="Right" {{#if (eq coneOrigin 2)}}selected{{/if}}>Right</option>
                            <option value="Top" {{#if (eq coneOrigin 3)}}selected{{/if}}>Top</option>
                            <option value="Bottom" {{#if (eq coneOrigin 4)}}selected{{/if}}>Bottom</option>
                        </select>
                    </div>
                    {{/if}}
                </ol>
                {{/if}}
                <ol class="form-list">
                    <div class="form-group">
                        <label style="max-width: none;">
                        Play audio on damage rolls				
                        </label>
                        <input type="checkbox" style="float:right;" name="siftoolkit.audio.playDamageAudio" {{#if playDamageAudio}}checked{{/if}} {{#unless isEditable}}disabled="disabled"{{/unless}}>
                    </div>
                    {{#if isArea}}
                    <div class="form-group">
                        <label style="max-width: none;">
                        Play audio on template set				
                        </label>
                        <input type="checkbox" style="float:right;" name="siftoolkit.audio.playTemplateAudio" {{#if playTemplateAudio}}checked{{/if}} {{#unless isEditable}}disabled="disabled"{{/unless}}>
                    </div>
                    {{/if}}
                    <div class="form-group">
                        <label style="max-width: none;">
                        Play audio on saving throws				
                        </label>
                        <input type="checkbox" style="float:right;" name="siftoolkit.audio.playSaveAudio" {{#if playSaveAudio}}checked{{/if}} {{#unless isEditable}}disabled="disabled"{{/unless}}>
                    </div>
                    <div class="form-group">
                        <label class="audioSelect" style="float:left;max-width:none;">Clip 
                            <table style="float:right;width:70%;padding:0px;border:none;margin:0;"><tbody><tr>
                            <td style="width: 80%;padding:0px;"><input type="text" size="10" name="siftoolkit.audio.clip.text" {{#unless isEditable}}disabled="disabled"{{/unless}} value={{clip}}   ></td>
                            <td style="width: 20%;padding:0px;"><input type="button" name="siftoolkit.audio.clip.bttn" value="Select" style="text-align: center;" {{#unless isEditable}}disabled="disabled"{{/unless}}></td>
                            </tr></tbody></table>
                        </label>
                    </div>
                    <div class="form-group">
                        <label style="max-width: none;">
                        Volume%				
                        </label>
                        <input type="number" style="float:right;" name="siftoolkit.audio.volume" min="10" max="200" value="{{volume}}" {{#unless isEditable}}disabled="disabled"{{/unless}} >
                    </div>
                </div>
                </ol>
